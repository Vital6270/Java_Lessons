// Задание 1. Создать класс "Сотрудник" с полями: ФИО, должность, email, телефон, зарплата, возраст.
// Конструктор класса должен заполнять эти поля при создании объекта. Внутри класса «Сотрудник» написать метод, который выводит информацию об объекте в консоль.

public class Employee {
    private String name;
    private String position;
    private String email;
    private String phoneNumber;
    private int salary;
    private int age;

    public Employee(String name, String position, String email, String phoneNumber, int salary, int age) {
        this.name = name;
        this.position = position;
        this.email = email;
        this.phoneNumber = phoneNumber;
        this.salary = salary;
        this.age = age;
    }

    public String getName() {
        return name;
    }

    public String getPosition() {
        return position;
    }

    public String getEmail() {
        return email;
    }

    public String getPhoneNumber() {
        return phoneNumber;
    }

    public int getSalary() {
        return salary;
    }

    public int getAge() {
        return age;
    }

    public void getEmployeeInfo() {
        System.out.println("Employee's name: " + this.getName() + "\nAge: " + this.getAge()
            + "\nPosition: " + this.getPosition() + "\nEmail: " + this.getEmail() + "\nPhone number: " +
                this.getPhoneNumber() + "\nSalary: " + this.getSalary());
    }

    // Задание 2. Создать массив из 5 сотрудников. Пример: вначале объявляем массив объектов Person[] persArray = new Person[5]; потом для каждой ячейки массива задаем объект
    // persArray[0] = new Person("Ivanov Ivan", "Engineer", "ivivan@mailbox.com", "892312312", 30000, 30); persArray[1] = new Person(...); ... persArray[4] = new Person(...);

    // мы продолжаем работу в том же классе Employee, который был создан для задания номер 1

    Employee employee1 = new Employee("Ivanov Ivan", "Engineer", "ivivan@mailbox.com", "892312312", 30000, 30);
    Employee employee2 = new Employee("Sidorov Petr", "Tester", "sidorov@mailbox.com", "872315348", 20000, 40);
    Employee employee3 = new Employee("Grebenko Evgeni", "Teacher", "evgeni1@mailbox.com", "872315348", 24000, 35);
    Employee employee4 = new Employee("Petrova Irina", "Student", "irinap@mailbox.com", "872315348", 26000, 18);
    Employee employee5 = new Employee("Avdeenko Petr", "Driver", "avdeenkop@mailbox.com", "872315348", 10000, 54);

    Employee[] employees = { employee1, employee2, employee3, employee4, employee5 };
}

// Задание 3. Создать класс Park с внутренним классом, с помощью объектов которого можно хранить информацию об аттракционах, времени их работы и стоимости.

public class Park {
    private String name;
    private double size;
    private int age;

    public Park(String name, double size, int age) {
        this.name = name;
        this.size = size;
        this.age = age;
    }

    public String getName() {
        return name;
    }

    public double getSize() {
        return size;
    }

    public int getAge() {
        return age;
    }

    public class Attraction {
        private String attractionName;
        private String openTime;
        private double cost;

        public Attraction(String attractionName, String openTime, double cost) {
            this.attractionName = attractionName;
            this.openTime = openTime;
            this.cost = cost;
        }
    }
}
