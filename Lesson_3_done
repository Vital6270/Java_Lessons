// Задание 1. Создать класс "Сотрудник" с полями: ФИО, должность, email, телефон, зарплата, возраст.
// Конструктор класса должен заполнять эти поля при создании объекта. Внутри класса «Сотрудник» написать метод, который выводит информацию об объекте в консоль.

public class Employee {

        private String name;
        private String position;
        private String email;
        private String phoneNumber;
        private int salary;
        private int age;

    public Employee(String name, String position, String email, String phoneNumber, int salary, int age){
            this.name = name;
            this.position = position;
            this.email = email;
            this.phoneNumber = phoneNumber;
            this.salary = salary;
            this.age = age;
        }

    public String getName() {
        return name;
    }

    public String getPosition() {
        return position;
    }

    public String getEmail() {
        return email;
    }

    public String getPhoneNumber() {
        return phoneNumber;
    }

    public int getSalary() {
        return salary;
    }

    public int getAge() {
        return age;
    }

    public static void getEmployeeInfo (Employee employee){
            System.out.println("Employee's name is: " + employee.getName() + "\nAge: " + employee.getAge()
                    + "\nPosition: " + employee.getPosition() + "\nEmail: " + employee.getEmail() + "\nPhone number: " +
                    employee.getPhoneNumber() + "\nSalary: " + employee.getSalary());
    }
}

    // Задание 2. Создать массив из 5 сотрудников. Пример: вначале объявляем массив объектов Person[] persArray = new Person[5]; потом для каждой ячейки массива задаем объект
    // persArray[0] = new Person("Ivanov Ivan", "Engineer", "ivivan@mailbox.com", "892312312", 30000, 30); persArray[1] = new Person(...); ... persArray[4] = new Person(...);

public class Employee2 {

    private String name;
    private String position;
    private String email;
    private String phoneNumber;
    private int salary;
    private int age;

    public Employee2(String name, String position, String email, String phoneNumber, int salary, int age){
        this.name = name;
        this.position = position;
        this.email = email;
        this.phoneNumber = phoneNumber;
        this.salary = salary;
        this.age = age;
    }

    public String getName() {
        return name;
    }

    public String getPosition() {
        return position;
    }

    public String getEmail() {
        return email;
    }

    public String getPhoneNumber() {
        return phoneNumber;
    }

    public int getSalary() {
        return salary;
    }

    public int getAge() {
        return age;
    }

        Employee2 employee1 = new Employee2("Ivanov Ivan", "Engineer",
                "ivivan@mailbox.com", "892312312", 30000, 30);
        Employee2 employee2 = new Employee2("Sidorov Petr", "Tester",
                "sidorov@mailbox.com", "872315348", 20000, 40);
        Employee2 employee3 = new Employee2("Grebenko Evgeni", "Teacher",
                "evgeni1@mailbox.com", "872315348", 24000, 35);
        Employee2 employee4 = new Employee2("Petrova Irina", "Student",
                "irinap@mailbox.com", "872315348", 26000, 18);
        Employee2 employee5 = new Employee2("Avdeenko Petr", "Driver",
                "avdeenkop@mailbox.com", "872315348", 10000, 54);

        Employee2[] employees = {employee1, employee2, employee3, employee4, employee5};
}

// Задание 3. Создать класс Park с внутренним классом, с помощью объектов которого можно хранить информацию об аттракционах, времени их работы и стоимости.

public class Park {
    private String name;
    private double size;
    private int age;

    public Park(String name, double size, int age) {
        this.name = name;
        this.size = size;
        this.age = age;
    }

    public class Attraction {
        private String attractionName;
        private String openTime;
        private double cost;

        public Attraction(String attractionName, String openTime, double cost) {
            this.attractionName = attractionName;
            this.openTime = openTime;
            this.cost = cost;
        }
    }
}
